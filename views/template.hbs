<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Shopping List</title>
    <style>
      li {
        margin-bottom: 10px;
      }
      li button {
        font-size: 12px;
        margin-left: 20px;
        color: #666;
      }
    </style>
    <script defer src="/public/app.js"></script>
  </head>
  <body>
    <h1>My Shopping List</h1>
    <div>
      <form>
        <label for="item">Enter a new item:</label>
        <input type="text" name="item"/>
        <button id="js__add-button" type="button">Add item</button>
      </form>
    </div>
  <ul>
    {{#each this}}
      <li>
        <span>{{this}}</span>
          <button id="js__delete-button" type="button">Delete</button>
      </li>
    {{/each}}
  </ul>
  </body>
</html>
